<script>
  const fetchAPI = async (url, option) => {
    const res = await fetch(url, option)
    return res.json();
  }

  const deleteProduct = async (id) => {
    const url = `/cpanel/categories/${id}/delete`;

    const option = {
      method: 'get',
      headers: { 'Content-Type': 'application/json' }
    }
    try {
      const result = await fetchAPI(url, option);
      console.log('delete result: ', result)

      if (result.tourisState == true && result.status) {
        swal('Không thể xóa!', {
          icon: 'error',
        });
      }

    } catch (e) {
      console.log('error delete: ', e)
      throw e;
    }
  }


  const confirmDelete = (id) => {
    swal({
      title: "Xác nhận xóa?",
      text: "Bạn có muốn xóa sản phẩm này?",
      icon: "warning",
      buttons: true,
      dangerMode: true,
    })
      .then((willDelete) => {
        if (willDelete) {
          deleteProduct(id);
          swal({
            title: "Deleted!",
            text: "Xóa thành công!!",
            icon: "success"
          }).then((wil) => {
            window.location.reload();
          })
        }
      });
  }
</script>